{
	"coc.preferences.snippets.enable": true,
	"languageserver": {
		"golang": {
			"command": "gopls",
			"disableWorkspaceFolders": true,
			"rootPatterns": ["go.mod", "go.sum", "main.go"],
			"filetypes": ["go"],
			"initializationOptions": {
				"gofumpt": true
			}
		}
	},
	"coc.preferences.formatOnSaveFiletypes": ["go"],
	"go.disable": {
		"workspaceFolder": true
	}
}
