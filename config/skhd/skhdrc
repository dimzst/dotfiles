# yabai

# window focus
alt - h : yabai -m window --focus west
alt - l : yabai -m window --focus east
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north

# swap window
shift + alt - h : yabai -m window --swap west
shift + alt - l : yabai -m window --swap east
shift + alt - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north

# focus monitor
ctrl + alt - z  : yabai -m  display --focus next
ctrl + alt - c  : yabai -m  display --focus prev

# send window to monitor and follow focus
ctrl + cmd - z  : yabai -m window --display next; yabai -m display --focus next
ctrl + cmd - c  : yabai -m window --display prev; yabai -m display --focus prev

# window resize
alt + ctrl - h : yabai -m window --resize left:-20:0;yabai -m window --resize right:-20:0
alt + ctrl - l : yabai -m window --resize right:20:0;yabai -m window --resize left:20:0
alt + ctrl - j : yabai -m window --resize bottom:0:20;yabai -m window --resize top:0:20
alt + ctrl - k : yabai -m window --resize top:0:-20;yabai -m window --resize bottom:0:-20
alt + ctrl - 0 : yabai -m space --balance

# rotate
alt - r : yabai -m space --rotate 90

# split
alt - e : yabai -m window --toggle split

# toggle window fullscreen
alt - f : yabai -m window --toggle zoom-fullscreen

# close window yabai way, not overriding system default
# alt - w : yabai -m window --close

# create desktop, move window and follow focus
# shift + cmd - s : yabai -m space --create && \
#                   index="$(yabai -m query --spaces --display | jq 'map(select(."native-fullscreen" == 0))[-1].index')" && \
#                   yabai -m window --space "${index}" && \
#                   yabai -m space --focus "${index}"

# create desktop, follow focus
# cmd + alt - s : yabai -m space --create && \
#                   index="$(yabai -m query --spaces --display | jq 'map(select(."native-fullscreen" == 0))[-1].index')" && \
#                   yabai -m space --focus "${index}"

# destroy space
cmd + alt -w : yabai -m space --destroy

# fast focus spaces
cmd + alt - z : yabai -m space --focus prev; yabai -m window --focus first
cmd + alt - c : yabai -m space --focus next; yabai -m window --focus first

# change space focus
cmd + shift - q : yabai -m space --focus 1; sleep 0.1; yabai -m window --focus first
cmd + shift - w : yabai -m space --focus 2; sleep 0.1; yabai -m window --focus first
cmd + shift - e : yabai -m space --focus 3; sleep 0.1; yabai -m window --focus first
cmd + shift - r : yabai -m space --focus 4; sleep 0.1; yabai -m window --focus first
cmd + shift - t : yabai -m space --focus 5; sleep 0.1; yabai -m window --focus first
cmd + shift - a : yabai -m space --focus 6; sleep 0.1; yabai -m window --focus first
cmd + shift - s : yabai -m space --focus 7; sleep 0.1; yabai -m window --focus first
cmd + shift - d : yabai -m space --focus 8; sleep 0.1; yabai -m window --focus first
cmd + shift - f : yabai -m space --focus 9; sleep 0.1; yabai -m window --focus first
cmd + shift - m : yabai -m config layout bsp
cmd + shift - n : yabai -m config layout float

# send window to space and follow focus
shift + alt - z  : yabai -m window --space prev; yabai -m space --focus prev; sleep 0.1; yabai -m window --focus last
shift + alt - c  : yabai -m window --space next; yabai -m space --focus next; sleep 0.1; yabai -m window --focus last
shift + alt - q  : yabai -m window --space 1; yabai -m space --focus 1; sleep 0.1; yabai -m window --focus last
shift + alt - w  : yabai -m window --space 2; yabai -m space --focus 2; sleep 0.1; yabai -m window --focus last
shift + alt - e  : yabai -m window --space 3; yabai -m space --focus 3; sleep 0.1; yabai -m window --focus last
shift + alt - r  : yabai -m window --space 4; yabai -m space --focus 4; sleep 0.1; yabai -m window --focus last
shift + alt - t  : yabai -m window --space 5; yabai -m space --focus 5; sleep 0.1; yabai -m window --focus last
shift + alt - a  : yabai -m window --space 6; yabai -m space --focus 6; sleep 0.1; yabai -m window --focus last
shift + alt - s  : yabai -m window --space 7; yabai -m space --focus 7; sleep 0.1; yabai -m window --focus last
shift + alt - d  : yabai -m window --space 8; yabai -m space --focus 8; sleep 0.1; yabai -m window --focus last
shift + alt - f  : yabai -m window --space 9; yabai -m space --focus 9; sleep 0.1; yabai -m window --focus last

# toggle sticky(+float), topmost, picture-in-picture
alt - p : yabai -m window --toggle sticky;\
          yabai -m window --toggle pip

 # alt - p : yabai -m window --toggle sticky;\
 #           yabai -m window --toggle border; \
 #           yabai -m window --grid 4:1:4:4:0:0

# float / unfloat window and center on screen
alt - t : yabai -m window --toggle float --grid 4:4:1:1:2:2

